<div class="container_signin">

<h2 class="form_ueberschrift">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

  <div class="form_new">
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary log_in" %>
  </div>
  <% end %>
  </div>
<div class="link_form">
<%= render "devise/shared/forgotPassword" %>
</div>
<div class="link_form">
<p style="color: grey">Not a member yet? <%= render "devise/shared/signup" %></p>
</div>
</div>
